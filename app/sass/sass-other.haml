.any-work{
	padding: 20px 0 60px 0;
	.any-work-wrap{
		width: 85%;
		margin: 0 auto;
		border: 5px solid $orange;
		text-align: center;
		padding: 30px 20px;
		.cols{
			float: left;
			padding: 0 15px;
		}
		.tabs-col{
			width: 30%;
		}
		.tabs-cont-col{
			width: 45%;
		}
		.deskr-col{
			width: 25%;
		}
		h2, h3{
			text-transform: uppercase;

		}
		h2{
			font-size: 30px;
			margin-bottom: 10px;
		}
		h3, h4{
			font-size: 18px;
			font-weight: 300;
		}
		h3{
			margin-bottom: 20px;
			&.bottom-text{
				font-weight: 800;
				font-size: 20px;
				margin: 0;
				text-transform: uppercase;
			}
		}
		h4{
			margin-bottom: 45px;
		}
		.tabs-vertical{
			ul{

				li{
					a{
						display: inline-block;
						margin-bottom: 20px;
						height: 44px;
						width: 100%;
						font-size: 14px;
						line-height: 45px;
						border: 1px solid $orange;
						color: $orange;
						&.active{
							background: $orange;
							color: #fff;
						}
					}
				}
			}
		}
		.tabs-v-content{
			width: 100%;

			background: #ccc;
			.tab{
				height: 300px;
				vertical-align: middle;
				display: table-cell;
				img{
					max-width: 100%;
					display: inline-block;
				}
			}
		}
		.deskr{
			p{
				font-size: 14px;
				line-height: 22px;
				margin-bottom: 30px;
				text-align: left;
				color: #000;
			}
		}

	}
}
.calculation{
background: #ffffff url("../img/shop-img/calc-bg.jpg") no-repeat center center;
background-size: cover;
	padding: 55px 0;
	text-align: center;
		::-webkit-input-placeholder{
		color: #6f6f6f;
		opacity: 1;
	}

	:-moz-placeholder{
		color: #6f6f6f;
		opacity: 1;
	}

	::-moz-placeholder{
		color: #6f6f6f;
		opacity: 1;
	}
	:-ms-input-placeholder{
		color: #6f6f6f;
		opacity: 1;
	}
	h2.underline{
		&:after{
			left: 50%;
			margin-left: -30px;
		}
		margin-bottom: 30px;
	}
	p.deskr{
		font-size: 18px;
		line-height: 26px;
		margin-bottom: 35px;
	}
	form{
		width: 50%;
		margin: 0 auto;
	}

	input{
		padding: 10px;
		width: 48%;
		color: #c3c3c3;
		border: 1px solid #c3c3c3;
		&:focus{
			border-color: $orange;
		}
	}
	.group-input{
		margin-bottom: 10px;
		input{
			&:last-child{
				margin-left: 3%;
			}
		}
	}
		textarea{
			background: transparent;
			border: 1px solid #dbdbdb;
			padding: 15px 10px;
			font-size: 16px;
			line-height: 20px;
			resize: none;
			height: 80px;
			width: 100%;
			margin: 0 auto;
			@include medium{
				height: 100px;
				width: 40%;
				margin: 0 auto;
			}
			@include extraSmall{
				width: 60%;
			}
			&:focus{
				outline: none;
				border-color: $orange;
			}
		}
	button{
		width: 400px;
		color: #fff;
		font-size: 24px;
	}
	h3{
		text-transform: uppercase;
		position: relative;
		font-size: 20px;
		font-weight: 800;
		color: #000;
		@include custom{
			font-size: 18px;
		}
	}
}